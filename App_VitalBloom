  <script id="app-script">
    document.addEventListener('DOMContentLoaded', () => {
      // Hide splash screen after a delay
      setTimeout(() => {
        const splashScreen = document.getElementById('splash-screen');
        splashScreen.style.opacity = '0';
        setTimeout(() => {
          splashScreen.style.display = 'none';
        }, 500);
      }, 2000);

      // Initialize chart
      const ctx = document.getElementById('metrics-chart').getContext('2d');
      const chart = new Chart(ctx, {
        type: 'line',
        data: {
          labels: ['Enero', 'Febrero', 'Marzo', 'Abril', 'Mayo', 'Junio'],
          datasets: [{
            label: 'Peso (kg)',
            data: [85, 83, 81, 80, 79, 77],
            fill: false,
            borderColor: 'rgb(74, 222, 128)',
            tension: 0.1
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false
        }
      });

      // Set today's date as default for health data form
      const today = new Date().toISOString().split('T')[0];
      document.getElementById('date').value = today;

      // Metric buttons click handler
      document.querySelectorAll('.metric-btn').forEach(button => {
        button.addEventListener('click', () => {
          document.querySelectorAll('.metric-btn').forEach(btn => {
            btn.classList.remove('bg-green-100', 'text-green-800');
            btn.classList.add('bg-gray-100', 'text-gray-800');
          });
          
          button.classList.remove('bg-gray-100', 'text-gray-800');
          button.classList.add('bg-green-100', 'text-green-800');
          
          const metric = button.dataset.metric;
          
          // Update chart data based on selected metric
          let data, color, label;
          
          if (metric === 'weight') {
            data = [85, 83, 81, 80, 79, 77];
            color = 'rgb(74, 222, 128)';
            label = 'Peso (kg)';
          } else if (metric === 'glucose') {
            data = [130, 125, 128, 120, 118, 115];
            color = 'rgb(59, 130, 246)';
            label = 'Glucosa (mg/dL)';
          } else {
            data = [30.1, 29.5, 28.8, 28.4, 28.0, 27.5];
            color = 'rgb(168, 85, 247)';
            label = 'IMC';
          }
          
          chart.data.datasets[0].data = data;
          chart.data.datasets[0].borderColor = color;
          chart.data.datasets[0].label = label;
          chart.update();
        });
      });

      // Mobile menu toggle
      document.getElementById('mobile-menu-button').addEventListener('click', () => {
        const mobileMenu = document.getElementById('mobile-menu');
        mobileMenu.classList.toggle('hidden');
      });
      
      // User dropdown toggle
      document.getElementById('user-menu-button')?.addEventListener('click', () => {
        const dropdown = document.getElementById('user-dropdown');
        dropdown.classList.toggle('hidden');
      });
      
      // Navigation section toggling
      const showSection = (sectionId) => {
        // Hide all sections
        document.querySelectorAll('main section').forEach(section => {
          section.classList.add('hidden');
        });
        
        // Show the selected section
        const section = document.getElementById(`${sectionId}-section`);
        section.classList.remove('hidden');
        
        // Update navigation classes
        document.querySelectorAll('.nav-link').forEach(link => {
          link.classList.remove('border-green-500', 'text-gray-900');
          link.classList.add('border-transparent', 'text-gray-500', 'hover:border-gray-300', 'hover:text-gray-700');
        });
        
        const navLink = document.querySelector(`.nav-link[data-section="${sectionId}"]`);
        if (navLink) {
          navLink.classList.remove('border-transparent', 'text-gray-500', 'hover:border-gray-300', 'hover:text-gray-700');
          navLink.classList.add('border-green-500', 'text-gray-900');
        }
        
        // Update mobile navigation classes
        document.querySelectorAll('.mobile-nav-link').forEach(link => {
          link.classList.remove('bg-green-50', 'border-green-500', 'text-green-700');
          link.classList.add('border-transparent', 'text-gray-600', 'hover:bg-gray-50', 'hover:border-gray-300', 'hover:text-gray-800');
        });
        
        const mobileNavLink = document.querySelector(`.mobile-nav-link[data-section="${sectionId}"]`);
        if (mobileNavLink) {
          mobileNavLink.classList.remove('border-transparent', 'text-gray-600', 'hover:bg-gray-50', 'hover:border-gray-300', 'hover:text-gray-800');
          mobileNavLink.classList.add('bg-green-50', 'border-green-500', 'text-green-700');
        }
        
        // Close mobile menu after selection on small screens
        const mobileMenu = document.getElementById('mobile-menu');
        mobileMenu.classList.add('hidden');
      };
      
      // Add click handlers to navigation links
      document.querySelectorAll('.nav-link, .mobile-nav-link').forEach(link => {
        link.addEventListener('click', () => {
          showSection(link.dataset.section);
        });
      });
      
      // Plan tabs handling
      document.getElementById('nutrition-tab').addEventListener('click', () => {
        document.querySelectorAll('.plan-tab').forEach(tab => {
          tab.classList.remove('border-green-500', 'text-green-600');
          tab.classList.add('border-transparent', 'text-gray-500');
        });
        document.getElementById('nutrition-tab').classList.add('border-green-500', 'text-green-600');
        document.getElementById('nutrition-tab').classList.remove('border-transparent', 'text-gray-500');
        
        document.querySelectorAll('.tab-content').forEach(content => {
          content.classList.remove('active');
        });
        document.getElementById('nutrition-content').classList.add('active');
      });
      
      document.getElementById('exercise-tab').addEventListener('click', () => {
        document.querySelectorAll('.plan-tab').forEach(tab => {
          tab.classList.remove('border-green-500', 'text-green-600');
          tab.classList.add('border-transparent', 'text-gray-500');
        });
        document.getElementById('exercise-tab').classList.add('border-green-500', 'text-green-600');
        document.getElementById('exercise-tab').classList.remove('border-transparent', 'text-gray-500');
        
        document.querySelectorAll('.tab-content').forEach(content => {
          content.classList.remove('active');
        });
        document.getElementById('exercise-content').classList.add('active');
      });
      
      // Toast notification function
      const showToast = (message, type = 'success') => {
        const toast = document.getElementById('toast');
        const toastMessage = document.getElementById('toast-message');
        
        // Set message and color based on type
        toastMessage.textContent = message;
        
        if (type === 'success') {
          toast.style.backgroundColor = '#4ade80';
        } else if (type === 'error') {
          toast.style.backgroundColor = '#ef4444';
        } else if (type === 'info') {
          toast.style.backgroundColor = '#3b82f6';
        }
        
        // Show the toast
        toast.classList.add('show');
        
        // Hide after 3 seconds
        setTimeout(() => {
          toast.classList.remove('show');
        }, 3000);
      };
      
      // Generate plan buttons
      document.getElementById('generate-nutrition-plan').addEventListener('click', function() {
        document.getElementById('nutrition-plan-container').classList.add('hidden');
        document.getElementById('nutrition-loading').classList.remove('hidden');
        
        // Simulate loading
        setTimeout(() => {
          document.getElementById('nutrition-loading').classList.add('hidden');
          document.getElementById('nutrition-plan-container').classList.remove('hidden');
          showToast('Plan nutricional generado exitosamente');
        }, 2000);
      });
      
      document.getElementById('generate-exercise-plan').addEventListener('click', function() {
        document.getElementById('exercise-plan-container').classList.add('hidden');
        document.getElementById('exercise-loading').classList.remove('hidden');
        
        // Simulate loading
        setTimeout(() => {
          document.getElementById('exercise-loading').classList.add('hidden');
          document.getElementById('exercise-plan-container').classList.remove('hidden');
          showToast('Rutina de ejercicios generada exitosamente');
        }, 2000);
      });
      
      // Modal handling
      const showModal = (modalId) => {
        const modal = document.getElementById(modalId);
        modal.classList.add('active');
      };
      
      const hideModal = (modalId) => {
        const modal = document.getElementById(modalId);
        modal.classList.remove('active');
      };
      
      // Login/Register buttons
      document.getElementById('login-button')?.addEventListener('click', () => {
        showModal('login-modal');
      });
      
      document.getElementById('register-button')?.addEventListener('click', () => {
        showModal('register-modal');
      });
      
      document.getElementById('mobile-login-button')?.addEventListener('click', () => {
        showModal('login-modal');
      });
      
      document.getElementById('mobile-register-button')?.addEventListener('click', () => {
        showModal('register-modal');
      });
      
      // Modal close buttons
      document.getElementById('close-login-modal')?.addEventListener('click', () => {
        hideModal('login-modal');
      });
      
      document.getElementById('close-register-modal')?.addEventListener('click', () => {
        hideModal('register-modal');
      });
      
      // Switch between login and register modals
      document.getElementById('show-register')?.addEventListener('click', () => {
        hideModal('login-modal');
        showModal('register-modal');
      });
      
      document.getElementById('show-login')?.addEventListener('click', () => {
        hideModal('register-modal');
        showModal('login-modal');
      });
      
      // Form submissions
      document.getElementById('login-form')?.addEventListener('submit', (e) => {
        e.preventDefault();
        const email = document.getElementById('login-email').value;
        const password = document.getElementById('login-password').value;
        
        if (!email || !password) {
          showToast('Por favor completa todos los campos', 'error');
          return;
        }
        
        // Here we would normally make an API call to authenticate the user
        // For the prototype, we'll just simulate a successful login
        
        // Store user info in localStorage (simulating JWT token)
        const userData = {
          name: 'Usuario Demo',
          email: email,
          isAdmin: email.includes('admin')
        };
        
        localStorage.setItem('vitalbloom_user', JSON.stringify(userData));
        
        // Update UI to reflect logged in state
        updateAuthUI(userData);
        
        // Close modal and show success message
        hideModal('login-modal');
        showToast('¡Inicio de sesión exitoso!');
      });
      
      document.getElementById('register-form')?.addEventListener('submit', (e) => {
        e.preventDefault();
        const name = document.getElementById('register-name').value;
        const email = document.getElementById('register-email').value;
        const password = document.getElementById('register-password').value;
        const confirmPassword = document.getElementById('register-confirm-password').value;
        
        if (!name || !email || !password || !confirmPassword) {
          showToast('Por favor completa todos los campos', 'error');
          return;
        }
        
        if (password !== confirmPassword) {
          showToast('Las contraseñas no coinciden', 'error');
          return;
        }
        
        if (password.length < 8) {
          showToast('La contraseña debe tener al menos 8 caracteres', 'error');
          return;
        }
        
        // Here we would normally make an API call to register the user
        // For the prototype, we'll just simulate a successful registration
        
        // Store user info in localStorage (simulating JWT token)
        const userData = {
          name: name,
          email: email,
          isAdmin: false
        };
        
        localStorage.setItem('vitalbloom_user', JSON.stringify(userData));
        
        // Update UI to reflect logged in state
        updateAuthUI(userData);
        
        // Close modal and show success message
        hideModal('register-modal');
        showToast('¡Registro exitoso!');
      });
      
      document.getElementById('health-data-form')?.addEventListener('submit', (e) => {
        e.preventDefault();
        const weight = document.getElementById('weight').value;
        const glucose = document.getElementById('glucose').value;
        const height = document.getElementById('height').value;
        const date = document.getElementById('date').value;
        
        if (!weight || !glucose || !height) {
          showToast('Por favor completa todos los campos necesarios', 'error');
          return;
        }
        
        // Here we would normally make an API call to save the data
        // For the prototype, we'll just simulate a successful save
        
        // Show success message
        showToast('Datos de salud guardados correctamente');
        
        // Clear form
        document.getElementById('weight').value = '';
        document.getElementById('glucose').value = '';
      });
      
      // Logout functionality
      const logoutUser = () => {
        // Remove user data from localStorage
        localStorage.removeItem('vitalbloom_user');
        
        // Update UI to reflect logged out state
        updateAuthUI(null);
        
        // Navigate to dashboard
        showSection('dashboard');
        
        // Show success message
        showToast('Sesión cerrada correctamente');
      };
      
      document.getElementById('logout-button')?.addEventListener('click', logoutUser);
      document.getElementById('mobile-logout-button')?.addEventListener('click', logoutUser);
      
      // Update UI based on authentication state
      const updateAuthUI = (user) => {
        const notAuthenticatedElements = document.querySelectorAll('#not-authenticated, #mobile-not-authenticated');
        const authenticatedElements = document.querySelectorAll('#authenticated, #mobile-authenticated');
        const adminElements = document.querySelectorAll('.admin-only');
        const userNameDisplay = document.getElementById('user-name-display');
        const mobileUserName = document.getElementById('mobile-user-name');
        const mobileUserEmail = document.getElementById('mobile-user-email');
        const userInitialsElements = document.querySelectorAll('.user-initials');
        
        if (user) {
          // User is logged in
          notAuthenticatedElements.forEach(el => el.classList.add('hidden'));
          authenticatedElements.forEach(el => el.classList.remove('hidden'));
          
          // Update user info
          userNameDisplay.textContent = user.name;
          
          if (mobileUserName) mobileUserName.textContent = user.name;
          if (mobileUserEmail) mobileUserEmail.textContent = user.email;
          
          // Set user initials for avatar
          const initials = user.name.split(' ').map(n => n[0]).join('').toUpperCase();
          userInitialsElements.forEach(el => el.textContent = initials);
          
          // Handle admin UI
          if (user.isAdmin) {
            adminElements.forEach(el => el.classList.remove('hidden'));
          } else {
            adminElements.forEach(el => el.classList.add('hidden'));
          }
        } else {
          // User is logged out
          notAuthenticatedElements.forEach(el => el.classList.remove('hidden'));
          authenticatedElements.forEach(el => el.classList.add('hidden'));
          adminElements.forEach(el => el.classList.add('hidden'));
          
          // Reset user info
          userNameDisplay.textContent = 'Usuario';
        }
      };
      
      // Check if user is already logged in (from localStorage)
      const storedUser = localStorage.getItem('vitalbloom_user');
      if (storedUser) {
        const userData = JSON.parse(storedUser);
        updateAuthUI(userData);
      } else {
        updateAuthUI(null);
      }
      
      // AI estimate button (disabled in prototype)
      document.getElementById('ai-estimate-button')?.addEventListener('click', () => {
        showToast('Esta funcionalidad estará disponible próximamente', 'info');
      });
    });
  </script>
</body>
</html>
